@model TimeSheetApplication.Models.Employee

@{
    Layout = null;
}
<body>

    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @Html.TextBoxFor(m => m.EmployeeEmail, new { @class = "form-control", id = "EmployeeEmail", placeholder = "Email address", required = "required", autofocus = "autofocus" })
        @Html.TextBoxFor(m => m.EmployeePassword, new { @class = "form-control", type = "password", placeholder = "Password", required = "" })
        <button type="submit">Sign in</button>

    }
</body>