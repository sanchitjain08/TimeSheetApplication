@model TimeSheetApplication.Models.TaskList
<h1>SessionEmail : @ViewBag.SessionEmail</h1>

<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>Add Employee</h2>
    </div>

    <form method="post">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="EmployeeEmail">Employee Email</label>
                <select class="form-control mb-3" asp-for="EmployeeEmail" placeholder="Enter Email">
                    <option value=@ViewBag.SessionEmail>@ViewBag.SessionEmail</option>
                </select>
               
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="TaskDetails">Task Details</label>
                <input type="text" class="form-control mb-3" asp-for="TaskDetails" placeholder="Task Details">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="TaskCraeted">Task Created Date</label>
                <select class="form-control mb-3" asp-for="TaskCraeted" placeholder="Enter Current Date Time">
                    <option value=@ViewBag.CurrentDateTime>@ViewBag.CurrentDateTime</option>
                </select>

            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="TaskDeadline">Deadline Date</label>
                <input type="datetime-local" class="form-control mb-3" asp-for="TaskDeadline" placeholder="Task Deadine">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="TaskType">Task Type</label>
                
                <select class="form-control mb-3" asp-for="TaskType" placeholder="Task Type">
                    <option value=0>Internal</option>
                    <option value=1>External</option>
                </select>
            </div>
        </div>

       


        <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Save</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-lg btn-warning p-2">Back To List</a>
    </form>

</div>
